<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DoListy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DoListy"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent Title="Day" ContentTemplate="{DataTemplate local:Pages.DayPage}"/>
        <ShellContent Title="Week" ContentTemplate="{DataTemplate local:Pages.WeekPage}"/>
        <ShellContent Title="Month" ContentTemplate="{DataTemplate local:Pages.MonthPage}"/>
        <ShellContent Title="Year" ContentTemplate="{DataTemplate local:Pages.YearPage}"/>
    </FlyoutItem>

</Shell>
