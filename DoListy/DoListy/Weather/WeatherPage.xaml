<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Weather.WeatherPage"
             xmlns:fontHelper="clr-namespace:WeatherAppClone.Helpers"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             Background="{StaticResource appBgColor}"
            Title="">
    
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="20">
        <core:SfBusyIndicator x:Name="busyIndicator"
                          IsRunning="True"
                          AnimationType="CircularMaterial" />
        <StackLayout Grid.Row="0"
                     Orientation="Vertical">
            <Label x:Name="City" FontSize="40" HorizontalOptions="Center" TextColor="White" Text="Ho Chi Minh"/>

            <Label x:Name="weatherCode" FontSize="20" HorizontalOptions="Center" TextColor="White" />
        </StackLayout>

        <Image x:Name="weatherImage" Grid.Row="1"  MaximumWidthRequest="100" MaximumHeightRequest="100"/>

        <Grid Grid.Row="2"  Margin="20" ColumnDefinitions="0.33*,0.33*,0.33*" RowDefinitions="Auto,Auto">
            <Image x:Name="drop" Grid.Column="0" Grid.Row="0"  HeightRequest="50"/>
            <Label Grid.Column="0" Grid.Row="1"  x:Name="Humidity" TextColor="White" HorizontalOptions="Center"/>

            <Label Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" x:Name="temperature" TextColor="White"  FontSize="40" HorizontalOptions="Center" FontAttributes="Bold"/>
           
            
            <Image x:Name="windPic" Grid.Column="2" Grid.Row="0"  HeightRequest="50"/>
            <Label Grid.Column="2" Grid.Row="1"  x:Name="wind" TextColor="White" HorizontalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>