<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Weather.WeatherPage"
             xmlns:fontHelper="clr-namespace:WeatherAppClone.Helpers"
             Background="Black"
            Title="">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Name="textCol" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Thanh pho Ho Chi minh" Style="{StaticResource textCol}"
               FontSize="26"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>
            <HorizontalStackLayout HorizontalOptions="Center"
                                Margin="0,10,0,0">
                <Label Style="{StaticResource textCol}" Text="26" FontSize="45"/>
                <Label Style="{StaticResource textCol}" Text="o" FontSize="20"/>
                <Label Style="{StaticResource textCol}" Text="C" FontSize="45"/>
            </HorizontalStackLayout>

            <Frame Background="#363363" 
               CornerRadius="40"
               Padding="10,5,10,5"
               Margin="0,10,0,10"
               HorizontalOptions="Center">
                <Label Text="Cloud " LineBreakMode="NoWrap"/>
            </Frame>

            <Grid Margin="40,40,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Image BackgroundColor="Transparent" VerticalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                        FontFamily="IconFontTypes"
                                        Glyph="{x:Static fontHelper:IconFont.Water_drop}"
                                        Size="38"
                                        Color="SkyBlue" />
                        </Image.Source>
                    </Image>

                    <Label Style="{StaticResource textCol}" 
                           VerticalOptions="Center"
                               Margin="10,0,0,0"
                               Text="80%"/> 
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Image BackgroundColor="Transparent" VerticalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                        FontFamily="IconFontTypes"
                                        Glyph="{x:Static fontHelper:IconFont.Info_outline}"
                                        Size="38"
                                        Color="SkyBlue" />
                        </Image.Source>
                    </Image>

                    <Label Style="{StaticResource textCol}" 
                            VerticalOptions="Center"
                            Margin="10,0,0,0"
                            Text="1.041 mBar"/>

                </HorizontalStackLayout>


                <HorizontalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Image BackgroundColor="Transparent" VerticalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                        FontFamily="IconFontTypes"
                                        Glyph="{x:Static fontHelper:IconFont.Air}"
                                        Size="38"
                                        Color="SkyBlue" />
                        </Image.Source>
                    </Image>

                    <Label Style="{StaticResource textCol}" 
                           VerticalOptions="Center"
                           Margin="10,0,0,0"
                           Text="19.1 km/h"/>
                </HorizontalStackLayout>

            </Grid>

            <Grid Margin="0,50,0,0">
                <Image Margin="0,10,0,0" Source="sunset_line.png"/>
                <HorizontalStackLayout  Margin="20,-20,0,0" >
                    <Image  BackgroundColor="Transparent" VerticalOptions="Start">
                        <Image.Source>
                            <FontImageSource
                                    FontFamily="IconFontTypes"
                                    Glyph="{x:Static fontHelper:IconFont.Sunny}"
                                    Size="38"
                                    Color="Yellow" />
                        </Image.Source>
                    </Image>

                    <Label Style="{StaticResource textCol}" 
                           VerticalOptions="Start"
                           Margin="5,0,0,0"
                           Text="6:00 AM"
                               />
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,0,20,30" HorizontalOptions="End">
                    <Image Margin="20,0,0,0" BackgroundColor="Transparent" VerticalOptions="End">
                        <Image.Source>
                            <FontImageSource
                    FontFamily="IconFontTypes"
                    Glyph="{x:Static fontHelper:IconFont.Circle}"
                    Size="38"
                    Color="LightYellow" />
                        </Image.Source>
                    </Image>

                    <Label Style="{StaticResource textCol}" 
                           VerticalOptions="End"
                            Margin="5,0,0,0"
                           Text="18:00 PM"
                               />
                </HorizontalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>