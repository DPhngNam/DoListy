<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Pages.MonthPage"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:control="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             Title="MonthPage"
             >
    <!--Page cua Vinh Thinh-->
    <ContentPage.Resources>
        <scheduler:SchedulerTextStyle x:Key="textStyle" FontSize="14" FontAttributes="Bold"/>
        <scheduler:SchedulerTextStyle x:Key="leadingTextStyle" FontSize="13" FontAttributes="Bold" TextColor="{StaticResource Black}"/>
        <scheduler:SchedulerTextStyle x:Key="trailingTextStyle" FontSize="13" FontAttributes="Bold" TextColor="{StaticResource Black}"/>
        <scheduler:SchedulerMonthCellStyle x:Key="monthCellStyle"
                                             Background="{StaticResource appBgColor}"
                                           LeadingMonthBackground="{StaticResource navBgColor}"
                                           TrailingMonthBackground="{StaticResource navBgColor}"
                                           TextStyle="{StaticResource textStyle}"
                                           LeadingMonthTextStyle="{StaticResource leadingTextStyle}"
                                           TrailingMonthTextStyle="{StaticResource trailingTextStyle}"/>
    </ContentPage.Resources>
    
    <Grid BackgroundColor="{StaticResource appBgColor}" 
        RowDefinitions="*"
        ColumnDefinitions="*,auto">

        <scheduler:SfScheduler TodayHighlightBrush="Orange" CellBorderBrush="Black" SelectedCellBackground="Gray"
        Grid.Column="0"
        Grid.Row="0"
        x:Name="Scheduler"
        ShowWeekNumber="True"
        View="Month"
        AllowViewNavigation="True">

            <scheduler:SfScheduler.MonthView>
                <scheduler:SchedulerMonthView CellStyle="{StaticResource monthCellStyle}" AppointmentDisplayMode="Indicator" >
                    <scheduler:SchedulerMonthView.ViewHeaderSettings>
                                <scheduler:SchedulerViewHeaderSettings Height="20" DateTextStyle="{StaticResource dayFrameHeaderLabelFontSize}" />
                    </scheduler:SchedulerMonthView.ViewHeaderSettings>
                </scheduler:SchedulerMonthView>
            </scheduler:SfScheduler.MonthView>
            
    </scheduler:SfScheduler>
    <ListView Grid.Row="0"
              Grid.Column="1">
        
    </ListView>
</Grid>
</ContentPage>