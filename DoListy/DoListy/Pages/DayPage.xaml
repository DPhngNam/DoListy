<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Pages.DayPage"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:control="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             Title="">
    <!-- Page cua Nam-->
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="dayViewSchedulerStyle" TargetType="scheduler:SfScheduler">
                <Setter Property="View" Value="Day" />
                <Setter Property="HeaderView">
                    <Setter.Value>
                        <scheduler:SchedulerHeaderView Height="0" />
                    </Setter.Value>
                </Setter>
                <Setter Property="DaysView">
                    <Setter.Value>
                        <scheduler:SchedulerDaysView NumberOfVisibleDays="1" StartHour="0" EndHour="0" />
                    </Setter.Value>
                    
                </Setter>
            </Style>


        </ResourceDictionary>

        <scheduler:SchedulerTextStyle x:Key="textStyle" FontSize="15" FontAttributes="Bold" TextColor="Black" />
    </ContentPage.Resources>

    <Grid Background="{StaticResource appBgColor}">
        <!--Devide the page into two half-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Header -->
            <RowDefinition Height="3*"/>
            <!-- Three equally split labels -->
        </Grid.RowDefinitions>

        <!--Half 1-->
        <Grid Grid.Row="0"  Padding="10">
            

            <Grid.ColumnDefinitions>
                <!-- Divide the grid into 7 equal columns -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- Frames corresponding to each column, each containing a Button -->
            <Frame BackgroundColor="{StaticResource appBgColor}" BorderColor="{StaticResource appBgColor}" CornerRadius="10" Grid.Column="0" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="1" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>

            <Button BackgroundColor="Transparent" Clicked="Button_Clicked"  Grid.Column="0">
                <!-- Content for the first button inside the frame -->

            </Button>
            <Frame BackgroundColor="White" CornerRadius="10" Grid.Column="1" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="0" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Grid.Column="2" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="0" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Grid.Column="3" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="0" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Grid.Column="4" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="0" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Grid.Column="5" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="0" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Grid.Column="6" Margin="5" WidthRequest="70" HeightRequest="70">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" ShowNavigationArrows="False" TranslationY="0" TranslationX="30" WidthRequest="110" HeightRequest="110"/>
                </StackLayout>
            </Frame>



        </Grid>

        
        <!--Half 2-->
        <!-- Frames Section -->

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <!-- Divide the grid into 7 equal columns -->
                <RowDefinition Height="3*"/>
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Divide the grid into 7 equal columns -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                
            </Grid.ColumnDefinitions>
            <Frame BackgroundColor="{StaticResource dayFrameBgColor}" CornerRadius="30" Grid.Row="1" Grid.Column="0" Margin="10" MaximumHeightRequest="600" MaximumWidthRequest="300">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="*,auto,auto" ColumnSpacing="5">
                        <Label Text="Tasks" FontSize="30" FontAttributes="Bold" Grid.Column="0" Grid.Row="0"/>
                        <Button CornerRadius="23" FontAttributes="Bold" Text="+" x:Name="buttonAddTask" BackgroundColor="SkyBlue" Clicked="buttonAddTask_Clicked" Grid.Column="2" Grid.Row="0"></Button>
                    </Grid>
                    <BoxView BackgroundColor="Black" HeightRequest="1"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="{StaticResource dayFrameBgColor}" CornerRadius="30" Grid.Row="1" Grid.Column="1" Margin="10" MaximumHeightRequest="600" MaximumWidthRequest="300">
                <StackLayout>
                    <Label Text="Task details" FontSize="14" FontAttributes="Bold" />
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="{StaticResource dayFrameBgColor}" CornerRadius="30" Grid.Row="1" Grid.Column="2" Margin="10" MaximumHeightRequest="600" MaximumWidthRequest="300">
                <StackLayout>
                    <Label Text="Weather" FontSize="14" FontAttributes="Bold" />
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" />
                </StackLayout>
            </Frame>
        </Grid>
        
    </Grid>
</ContentPage>