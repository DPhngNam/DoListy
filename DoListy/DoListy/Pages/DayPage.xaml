<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Pages.DayPage"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:control="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             Title="DayPage">
    <!-- Page cua Nam-->
    <Grid Background="{StaticResource appBgColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

            <!-- Header -->
            <RowDefinition Height="3*"/>
            <!-- Row for the three equally split labels -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>
            <!-- Left panel -->
            <ColumnDefinition Width="*"/>
            <!-- Center panel -->
            <ColumnDefinition Width="*"/>
            <!-- Right panel -->
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Row="0" Grid.ColumnSpan="10">
            <scheduler:SfScheduler x:Name="Scheduler"
                                    View="Day"
                                    FirstDayOfWeek="Monday"
                                    >
                <scheduler:SfScheduler.DaysView>
                    <scheduler:SchedulerDaysView NumberOfVisibleDays="7" StartHour="0" EndHour="0" />
                </scheduler:SfScheduler.DaysView>
            </scheduler:SfScheduler>
        </StackLayout>

        <Border Grid.Row="1" Grid.Column="0" Margin="30" BackgroundColor="{StaticResource dayFrameBgColor}">
            <Label Text="Panel: Left" />
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="30" BackgroundColor="{StaticResource dayFrameBgColor}">
            <Label Text="Panel: Center" />
        </Border>

        <Border Grid.Row="1" Grid.Column="2" Margin="30" BackgroundColor="{StaticResource dayFrameBgColor}">
            <Label Text="Panel: Right" />
        </Border>
    </Grid>
</ContentPage>