<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Pages.DayPage"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:control="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             Title="DayPage">
    <!-- Page cua Nam-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Half 1-->
            <Style x:Key="dayViewSchedulerStyle" TargetType="scheduler:SfScheduler">
                <Setter Property="View" Value="Day" />
                <Setter Property="HeaderView">
                    <Setter.Value>
                        <scheduler:SchedulerHeaderView Height="0" />
                    </Setter.Value>
                </Setter>
                <Setter Property="DaysView">
                    <Setter.Value>
                        <scheduler:SchedulerDaysView NumberOfVisibleDays="1" StartHour="0" EndHour="0" />
                    </Setter.Value>

                </Setter>
                <Setter Property="ShowNavigationArrows" Value="False" />
                <Setter Property="TranslationY" Value="1" />
                <Setter Property="TranslationX" Value="30" />
                <Setter Property="WidthRequest" Value="110" />
                <Setter Property="HeightRequest" Value="110" />

            </Style>
            <Style x:Key="CommonFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource appBgColor}" />
                <Setter Property="BorderColor" Value="{StaticResource appBgColor}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="WidthRequest" Value="70" />
                <Setter Property="HeightRequest" Value="70" />
            </Style>
            <Style x:Key="CommonStackLayoutStyle" TargetType="StackLayout">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            </Style>
            <Style x:Key="CommonButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="WidthRequest" Value="70" />
                <Setter Property="HeightRequest" Value="70" />
                
            </Style>
            
            
            <!--Half 2-->
            <Style x:Key="CommonFrame" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource dayFrameBgColor}" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="MaximumHeightRequest" Value="600" />
                <Setter Property="MaximumWidthRequest" Value="400" />

            </Style>
        </ResourceDictionary>

        <scheduler:SchedulerTextStyle x:Key="textStyle" FontSize="15" FontAttributes="Bold" TextColor="Black" />
    </ContentPage.Resources>

    <Grid Background="{StaticResource appBgColor}">
        <!--Devide the page into two half-->
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="3*"/>
           
        </Grid.RowDefinitions>

        <!--Half 1-->
        <Grid Grid.Row="0"  Padding="10" TranslationY="-50">
            

            <Grid.ColumnDefinitions>
                <!-- Divide the grid into 7 equal columns -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- Frames corresponding to each column, each containing a Button -->
            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="0">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler  x:FieldModifier="public" Style="{StaticResource dayViewSchedulerStyle}"/>
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="0" Clicked="Button_Clicked"/>


            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="1">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" />
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="1" />

            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="2">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" />
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="2" />


            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="3">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" />
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="3" />



            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="4">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" />
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="4" />


            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="5">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}" />
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="5" />




            <Frame Style="{StaticResource CommonFrameStyle}" Grid.Column="6">
                <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                    <scheduler:SfScheduler Style="{StaticResource dayViewSchedulerStyle}"  />
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource CommonButtonStyle}" Grid.Column="6" />


        </Grid>

        
        <!--Half 2-->
        

        <Grid Grid.Row="1" Grid.Column="0" TranslationY="-40">
            <Grid.RowDefinitions>
                
                <RowDefinition Height="3*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
               
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Frame Style="{StaticResource CommonFrame}" Grid.Row="1" Grid.Column="0" Margin="10" >
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="*,auto,auto" ColumnSpacing="5">
                        <Label Text="Tasks" FontSize="30" FontAttributes="Bold" Grid.Column="0" Grid.Row="0"/>
                        <Button CornerRadius="23" FontAttributes="Bold" Text="+" x:Name="buttonAddTask" BackgroundColor="SkyBlue" Clicked="buttonAddTask_Clicked" Grid.Column="2" Grid.Row="0"></Button>
                    </Grid>
                    <BoxView BackgroundColor="Black" HeightRequest="1"/>

                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CommonFrame}" Grid.Row="1" Grid.Column="1">
                <StackLayout>
                    <Label Text="Task details" FontSize="14" FontAttributes="Bold" />
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" />
                </StackLayout>
            </Frame>

            <!-- Weather Frame -->
            <Frame Style="{StaticResource CommonFrame}" Grid.Row="1" Grid.Column="2">
                <StackLayout>
                    <Label Text="Weather" FontSize="14" FontAttributes="Bold" />
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" />
                    
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>