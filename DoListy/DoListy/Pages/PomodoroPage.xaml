<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoListy.Pages.PomodoroPage"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:control="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
    Title="">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="pomoFgColor">#0197F6</Color>
            <Color x:Key="pomoBgColor">#000509</Color>
            <Color x:Key="pomoTextColor">#DCD6F7</Color>
            <Style x:Key="pomoStateLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="TextColor" Value="{StaticResource pomoTextColor}"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                
            </Style>
            <Style x:Key="pomoSettingsLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="TextColor" Value="{StaticResource pomoTextColor}"/>
                
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid ColumnDefinitions="2*,*" RowDefinitions="1*,Auto,1*" BackgroundColor="{StaticResource pomoBgColor}" Padding="10,10,15,10">
        <ImageButton Grid.Row="0" 
                     Scale="0.5"
                     BackgroundColor="Transparent"
                     Grid.Column="0" HorizontalOptions="Start" Source="leftarrowicon.png" Clicked="OnBackButtonClicked"/>
        <Label Grid.Row="0" Grid.Column="0" x:Name="pomoStateLabel" HorizontalOptions="Center" Text="FOCUSING" Style="{StaticResource pomoStateLabelStyle}"/> 
         <Frame Grid.Column="1" Grid.Row="1" BackgroundColor="Transparent"
                BorderColor="{StaticResource pomoFgColor}"
                CornerRadius="20" Margin="10,10,0,10"
                HeightRequest="350">
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,0.1*,*,*,*,*,2*" RowSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" Text="Timer Settings" Margin="3,0,3,0" Padding="0,0,0,0" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource pomoTextColor}"/>
                <BoxView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="Start" HeightRequest="1" Margin="3,0,3,0" Color="{StaticResource pomoFgColor}" BackgroundColor="{StaticResource pomoFgColor}"/>
                <Label Grid.Row="2" Grid.Column="0" Text="Pomodoro Length" Style="{StaticResource pomoSettingsLabelStyle}"/>
                <Label Grid.Row="3" Grid.Column="0" Text="Short Break Length" Style="{StaticResource pomoSettingsLabelStyle}"/>
                <Label Grid.Row="4" Grid.Column="0" Text="Long Break Length" Style="{StaticResource pomoSettingsLabelStyle}"/>
                <Label Grid.Row="5" Grid.Column="0" Text="Long Break After" Style="{StaticResource pomoSettingsLabelStyle}"/>
                <editors:SfNumericEntry Grid.Row="2" Grid.Column="1" BackgroundColor="Transparent" TextColor="{StaticResource pomoTextColor}"
                                        x:Name="pomoLengthEntry"
                                        CustomFormat="0 mins"
                                        AllowNull="False" Minimum="0" Maximum="200"
                                        UpDownPlacementMode="Inline"
                                        SmallChange="5"
                                        HeightRequest="20"
                                        VerticalOptions="Start"
                                        Value="25"
                                        />
                <editors:SfNumericEntry Grid.Row="3" Grid.Column="1" BackgroundColor="Transparent" TextColor="{StaticResource pomoTextColor}"
                                        x:Name="shortBreakLengthEntry"
                                        CustomFormat="0 mins"
                                        AllowNull="False" Minimum="0" Maximum="200"
                                        UpDownPlacementMode="Inline"
                                        SmallChange="5"
                                        HeightRequest="20"
                                        VerticalOptions="Start"
                                        Value="5"
                                        />
                <editors:SfNumericEntry Grid.Row="4" Grid.Column="1" BackgroundColor="Transparent" TextColor="{StaticResource pomoTextColor}"
                                        x:Name="longBreakLengthEntry"
                                        CustomFormat="0 mins"
                                        AllowNull="False" Minimum="0" Maximum="200"
                                        UpDownPlacementMode="Inline"
                                        SmallChange="5"
                                        HeightRequest="20"
                                        VerticalOptions="Start"
                                        Value="10"
                                        />
                <editors:SfNumericEntry Grid.Row="5" Grid.Column="1" BackgroundColor="Transparent" TextColor="{StaticResource pomoTextColor}"
                                        x:Name="longBreakAfterEntry"
                                        CustomFormat="0 Pomos"
                                        AllowNull="False" Minimum="0" Maximum="50"
                                        UpDownPlacementMode="Inline"
                                        SmallChange="1"
                                        HeightRequest="20"
                                        VerticalOptions="Start"
                                        Value="4"
                                        />
                

                <Button Grid.Row="6" Grid.Column="0" Text="Cancel"
                        x:Name="cancelPomoSettingsButton"
                        Clicked="OnCancelPomoSettingClicked"
                        BackgroundColor="Transparent"
                        BorderColor="#0197F6"
                        HeightRequest="25"
                        WidthRequest="140"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        CornerRadius="20"/>
                <Button Grid.Row="6" Grid.Column="1" Text="Apply"
                        x:Name="applyPomoSettingsButton"
                        Clicked="OnApplyPomoSettingClicked"
                        BackgroundColor="{StaticResource pomoFgColor}"
                        HeightRequest="25"
                        CornerRadius="20"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        WidthRequest="140"/>
                
            </Grid>
        </Frame>
        <Label Grid.Row="1" Grid.Column="0"  x:Name="timerLabel" TextColor="White" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
        <control:SfCircularProgressBar Grid.Row="1" Grid.Column="0"  x:Name="progressBar" Progress="0" BackgroundColor="Transparent" VerticalOptions="Start" HeightRequest="350" WidthRequest="350"/>
 
        <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="*"  Grid.Row="2" Grid.Column="0" >
            <ImageButton Grid.Column="1" Grid.Row="0" Source="playicon.png"
                         BackgroundColor="Transparent"
                         VerticalOptions="Start"
                         Clicked="OnStartClicked"
                         x:Name="startButton"
                         HeightRequest="32"
                         WidthRequest="32"
                         />
            <ImageButton Grid.Column="0" Grid.Row="0" Source="pauseicon.png"
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Start"
                         IsVisible="False"
                         Clicked="OnPauseClicked"
                         HeightRequest="32"
                         WidthRequest="32"
                         x:Name="pauseButton"/>
            <ImageButton Grid.Column="2" Grid.Row="0" Source="stopicon.png"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Start"
                         VerticalOptions="Start"
                         IsVisible="False"
                         Clicked="OnStopClicked"
                         HeightRequest="32"
                         WidthRequest="32"
                         x:Name="stopButton"/>
        </Grid>

    </Grid> 
</ContentPage>